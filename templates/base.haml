- load scss
!!!
%html
  %head
    %meta{'charset': 'utf-8'}
    %meta{'name': 'viewport', content: 'width=device-width'}
    %title
      -block title
        MBrace

    %link{'rel': 'stylesheet', 'href': '{{ STATIC_URL }}{% scss "foundation/scss/normalize.scss"%}'}
    %link{'rel': 'stylesheet', 'href': '{{ STATIC_URL }}{% scss "foundation/scss/foundation.scss"%}'}

    %link{'rel': 'stylesheet', 'href': '{{ STATIC_URL }}{% scss "scss/app.scss"%}'}

    %script{'src': "{{ STATIC_URL }}/foundation/js/vendor/zepto.js"}
    %script{'src': "{{ STATIC_URL }}/foundation/js/vendor/custom.modernizr.js"}
    %script{'src': "{{ STATIC_URL }}/foundation/js/foundation/foundation.js"}
    %script{'src': "{{ STATIC_URL }}/foundation/js/foundation/foundation.topbar.js"}
  %body
    -block header
      %nav.top-bar
        %ul.title-area
          %li.name
            %h1
              %a{href: "/"} mbrace
          %li.toggle-topbar.menu-icon
            %a{href: '#'}
              %span
                Menu
        %section.top-bar-section
          %ul.right
            -if user.is_authenticated
              %li
                %a{'href': "{%url 'dashboard'%}"} My Dashboard
              %li
                %a{'href': "{%url 'auth_logout'%}"} Logout
            -else
              %li
                %a{'class': 'button', 'href': "{%url 'registration_register' %}"} New? Create an account!
              %li
                %a{'href': "{%url 'auth_login' %}"} Log in to your account

    -block content

:javascript
    $(document).foundation();

