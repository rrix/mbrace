- extends "base.html"

-block title
  Login to Mbrace

-block content
  .row
    .large-6.medium-12.small-12.centered
      -if form.errors
        %p Your username and password didn't match. Please try again.

      %form{'method': 'post', 'action': '{% url "django.contrib.auth.views.login" %}'}
        {% csrf_token %}
          %table
            %tr
              %td {{ form.username.label_tag }}
              %td {{ form.username }}
            %tr
              %td {{ form.password.label_tag }}
              %td {{ form.password }}

          %input{'type': 'submit', 'value': 'login'}
          %input{'type': 'hidden', 'value': '{{ next }}', 'name': 'next'}
